<?php

$finder = PhpCsFixer\Finder::create()
    ->exclude(['Migrations'])
    ->in(__DIR__.'/src')
    ->in(__DIR__.'/tests')
;

return PhpCsFixer\Config::create()
    ->setRules([
        '@Symfony' => true,
        '@PHP71Migration' => true,
        '@DoctrineAnnotation' => true,
        'phpdoc_order' => true,
        'array_syntax' => ['syntax' => 'short'],
        'phpdoc_no_empty_return' => false
    ])
    ->setFinder($finder)
;
